{
    "routes": [
        {
            "route": "/proxy/*",
            "rewrite": "https://samaan-api.azurewebsites.net/api/*"
        },
        {
            "route": "/merchant/orders/*",
            "rewrite": "/merchant/orders/_fallback.html"
        },
        {
            "route": "/merchant/products/*",
            "rewrite": "/merchant/products.html"
        }
    ],
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/images/*.{png,jpg,gif}",
            "/_next/*",
            "/proxy/*",
            "/merchant/orders/*",
            "/merchant/products/*"
        ]
    },
    "responseOverrides": {
        "404": {
            "rewrite": "/index.html"
        }
    }
}